@using RetroShirtWeb.Extensions

@{
    ViewData["Title"] = "_Navbar";
}

<header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container">
  <a class="navbar-brand" asp-action="Index" asp-controller="Home" asp-route-catId=0 asp-route-currentPage=1> <img style="width:55px;" src="https://seeklogo.com/images/F/ford-focus-rs-logo-3DBE0DF085-seeklogo.com.png"/>  </a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <a class="nav-link" asp-action="Index" asp-controller="Home" asp-route-catId=0 asp-route-currentPage=1>Home <span class="sr-only">(current)</span></a>
      </li>
      
      @await Component.InvokeAsync("DropDownMenu")

      <li class="nav-item">
        <a class="nav-link" asp-action="Index" asp-controller="Cart">Cart</a>
      </li>

       @if (@User.Identity.GetName()=="admin" ||@User.Identity.GetName()=="editor" )
                   {
                       <li class="nav-item">
                            <a class="nav-link" asp-action="Index" asp-controller="Products">Panel</a>
                       </li>
                   }

     
      <li class="nav-item">
                            @if (User.Identity.IsAuthenticated)
                            {
                                <a class="nav-link" asp-action="Logout" asp-controller="Users">Welcome! @User.Identity.Name (Signout)</a>
                            }
                            else
                            {
                                <a class="nav-link" asp-action="Login" asp-controller="Users">Sign-In</a>
                            }
                        </li>

                      
                   
                        
    </ul>

    
    
    <form class="form-inline my-2 my-lg-0" method="post">
      <input class="form-control mr-sm-2" type="text" name="search" id="search" placeholder="Search for team..." aria-label="Search">
      <button class="btn btn-outline-primary my-2 my-sm-0" type="submit" value="search" asp-action="Index" asp-controller="Home">Search</button>
    </form>
    </div>
    </div>
  
</nav>
    </header>


    
