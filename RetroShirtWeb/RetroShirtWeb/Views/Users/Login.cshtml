@model RetroShirtWeb.Models.UserModel
@{
    ViewData["Title"] = "Login";
}

<h1 class="mt-3">Login</h1>
<p>You have to log-in to reach website properties.</p>

<hr />
<div class="row">
    <div class="col-md-4">
        @if (ViewBag.ReturnUrl!=null)
       {
           <p>You'll redirect to: @ViewBag.ReturnUrl </p>
       }
        

        <form asp-action="Login" asp-route-returnUrl="@ViewBag.ReturnUrl">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Username" class="control-label"></label>
                <input asp-for="Username" class="form-control" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
        </form>       
        <a asp-action="Register">Don't you have an account ?</a>
        <div asp-validation-summary="All"></div>

    </div>
</div>
